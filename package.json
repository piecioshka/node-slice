    },
    "repository": {
        "type": "git",
        "url": "git://github.com/piecioshka/node-slice.git"
    },
    "engines": {
        "node": ">=16"
    },
    "files": [
        "dist",
        "types",
        "index.js",
        "package.json",
        "LICENSE",
        "README.md",
        "!**/*.spec.*"
    ],
    "keywords": [
        "slice",
        "string",
        "dots",
        "cut",
        "short"
    ],
    "main": "./index.js",
    "types": "./types/index.d.ts"
